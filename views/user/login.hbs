<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h2 class="text-center">Log In</h2>
                {{#if loginErr}}
                    <p class="error">{{loginErr}}</p>
                {{/if}}
                <form class="mt-3" action="/login" method="POST" enctype="multipart/form-data"> 
                    <div class="mb-3">
                    <label class="mt-2" for="">Email Address</label>
                    <input type="text" name="email" class="form-control">
                    <label class="mt-2" for="">Password</label>
                    <input type="text" name="password" class="form-control">
                    </div>
                    <a class="mt-5" href="/signup">Create new account</a>
                    <button  type="submit" class="btn btn-success float-right mt-2">Log In</button>
                </form>
            </div>
        </div>
    </div>
</section>