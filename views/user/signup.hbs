<section></section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h2 class="text-center">Create New Account</h2>
                <form class="mt-3" action="/signup" method="POST" enctype="multipart/form-data"> 
                    <div class="mb-3">
                    <label class="mt-2" for="">Name</label>
                    <input type="text" name="name" class="form-control">
                    <label class="mt-2" for="">Email Address</label>
                    <input type="text" name="email" class="form-control">
                    <label class="mt-2" for="">Password</label>
                    <input type="text" name="password" class="form-control">
                    </div>
                    <a class="mt-5" href="/login">Already have an account</a>
                    <button  type="submit" class="btn btn-success float-right mt-2">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</section>